<?xml version="1.0" encoding="UTF-8"?>
<Grid xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoanControllerApp.EntryWithMessage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*" />
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Entry Grid.Row="0" Margin="0,0,0,0" TextColor="#333436" PlaceholderColor="#8d9197" FontSize="Small" Placeholder="{Binding Placeholder}" Text="{Binding Text}" IsPassword="{Binding IsPassword}}"></Entry>
        <Label Grid.Row="1" FontSize="Micro" TextColor="{Binding MessageTextColor}" Margin="5,0,0,0" VerticalOptions="Start" HorizontalOptions="Start" VerticalTextAlignment="Start" HorizontalTextAlignment="Start" Text="{Binding MessageText}"></Label>
    </Grid>
</Grid>